<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StaffBalance">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/title" android:id="@+id/item_title"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_search_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:singleLine="true"
                android:hint="@string/hint_name" />
        </android.support.design.widget.TextInputLayout>

        <!--&lt;!&ndash; List View &ndash;&gt;-->
        <!--<ListView-->
            <!--android:id="@+id/list_view"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <EditText
            android:id="@+id/id_year"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="5dp"
            android:hint="@string/year"
            android:inputType="number"
            android:maxLength="14"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            android:textSize="14sp" />

        <EditText
            android:nextFocusDown="@+id/id_type"
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/payment_history"
            android:drawablePadding="5dp"
            android:focusable="false"
            android:hint="@string/balance"
            android:inputType="date"
            android:onClick="OnClickDOB"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

        </LinearLayout>

    </LinearLayout>

</FrameLayout>